<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/yellow_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign in"
        android:id="@+id/textView"
        android:textColor="#645455"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/inputLoginUsername"
        android:textColor="#645455"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textStyle="italic"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:hint="username" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/inputLoginPassword"
        android:textColor="#645455"
        android:background="#FFFFFF"
        android:password="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:ems="10"
        android:textSize="14dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:hint="password"
        android:textStyle="italic"
        android:inputType="textPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Sign In"
        android:id="@+id/okLoginButton"
        android:layout_gravity="center_horizontal"
        android:background="#cb615e5c"
        android:textColor="#e7d3b0"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="REGISTER"
        android:layout_marginTop="15dp"
        android:background="#cb615e5c"
        android:textColor="#e7d3b0"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickCreateAccount"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_hotdog"
        android:layout_marginTop="10dp" />


</LinearLayout>
