<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FeedbackActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/yellow_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Leave your feedback"
        android:layout_marginBottom="15dp"
        android:id="@+id/adminText" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="0.41"
        android:layout_marginBottom="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/inputFeedback"
            android:layout_gravity="center_horizontal"
            android:maxHeight="160dp" />
    </FrameLayout>

    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Send feedback"
        android:id="@+id/feedbackButton"
        android:layout_gravity="center_horizontal"
        android:background="#cb615e5c"
        android:textColor="#e1ff00"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewResponse"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click backspace on your phone to go back to the Main activity"
        android:id="@+id/textView2"
        android:layout_weight="0.15"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:textColor="#494747"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textColor="#494747"
        android:layout_marginLeft="0dp"
        android:textSize="24dp" />

    <Button
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:text="Log out"
        android:id="@+id/logoutButton"
        android:height="70dp"
        android:width="130dp"
        android:textSize="17dp"
        android:background="#cb615e5c"
        android:textColor="#e1ff00"
        android:typeface="monospace"
        android:onClick="onClick"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"/>


</LinearLayout>