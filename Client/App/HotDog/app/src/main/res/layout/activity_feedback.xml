<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FeedbackActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/yellow_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Leave your feedback"
        android:id="@+id/adminText"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#645455"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/inputFeedback"
        android:layout_gravity="center_horizontal"
        android:maxHeight="160dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Send feedback"
        android:id="@+id/feedbackButton"
        android:layout_gravity="center_horizontal"
        android:background="#cb615e5c"
        android:textColor="#e7d3b0"
        android:onClick="onClick"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewResponse"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click backspace on your phone to go back to the main activity or"
        android:id="@+id/textView2"
        android:layout_weight="0.15"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:textColor="#494747"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Log out"
        android:id="@+id/logoutButton"
        android:height="70dp"
        android:width="130dp"
        android:textSize="17dp"
        android:background="#cb615e5c"
        android:textColor="#e7d3b0"
        android:typeface="monospace"
        android:onClick="onClick"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp" />


</LinearLayout>